@model EgitimPortalFinal.ViewModels.CourseModel

@{
    ViewData["Title"] = "Delete";

    Layout = "_layoutAdminLTE";
}

<h3 style="margin-left:270px;margin-top:15px">Bu kursu silmek istediğinizden emin misiniz?</h3>
<div style="margin-left:270px">
    <h4>Kurs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">
            Fotoğraf
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <img src="~/CoursePhotos/@Model.PhotoUrl" style="width:100px; height:50px">
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="List" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>
